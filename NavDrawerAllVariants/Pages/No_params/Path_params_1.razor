@layout No_params
@page "/no-params/path-params-1/{pathParam1:double?}"


<div class="row-layout path-params-1-container">
    <h5 class="h5">
        PATH PARAMS 1
    </h5>
</div>

@code {

    [CascadingParameter]
    private RouteData RouteData { get; set; }
    [Parameter]
    public double PathParam1 { get; set; }

    protected override void OnParametersSet()
    {
        RouteData.RouteValues.TryGetValue("PathParam1", out var pathParam1);
        PathParam1 = pathParam1 != null ? Convert.ToDouble(pathParam1) : 30;
    }
}
